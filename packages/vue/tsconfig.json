{
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "lib",
        "paths": {
            "@inkline/paper/*": ["./src/*"]
        },
        "types": [
            "vue",
            "vite/client"
        ]
    },
    "references": [
        {
            "path": "./tsconfig.vite.json"
        }
    ]
}
