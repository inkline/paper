{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "lib",
        "paths": {
            "@inkline/paper/*": ["./src/*"]
        },
        "typeRoots": [],
        "types": [
            "@types/shelljs",
            "vite/client",
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/react",
        "src/vue"
    ],
    "references": [
        {
            "path": "./tsconfig.vite.json"
        },
        {
            "path": "./src/react/tsconfig.json"
        },
        {
            "path": "./src/vue/tsconfig.json"
        }
    ],
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "commonjs"
        },
        "require": ["tsconfig-paths/register"]
    }
}
